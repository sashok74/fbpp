  using decn = DecNumber;
  using decs = DecSingle;
  using decd = DecDouble;
  using decq = DecQuad;
  using decp = DecPacked;

  // Data interchange types:
  using dec32  = decimal32;
  using dec64  = decimal64;
  using dec128 = decimal128;

}; // end namespace

